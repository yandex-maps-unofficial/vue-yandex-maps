{
  "assignees": [
    "daniluk4000"
  ],
  "prConcurrentLimit": 0,
  "semanticCommits": "disabled",
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "osvVulnerabilityAlerts": true,
  rebaseWhen: "behind-base-branch",
  "packageRules": [
    {
      "matchPackageNames": [
        "vue",
        "nuxt"
      ],
      matchCurrentVersion: "<=2",
      "allowedVersions": "<=2"
    },
    {
      "matchPackageNames": [
        "nuxt"
      ],
      matchCurrentVersion: "<=3",
      "allowedVersions": "<=3"
    },
    {
      matchDepTypes: [
        "peerDependencies",
        "engines"
      ],
      enabled: false
    },
    {
      "matchPackageNames": [
        "@yandex/ymaps3-types"
      ],
      matchDepTypes: [
        "peerDependencies",
        "engines"
      ],
      "enabled": true,
    },
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "matchCurrentVersion": "!/^0/"
    },
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "matchPackageNames": [
        "vue"
      ],
      "rangeStrategy": "bump",
      "groupName": "Vue",
      "separateMultipleMinor": true,
      "separateMinorPatch": true
    },
    {
      "matchPackageNames": [
        "@vue/language-server",
        "vue-tsc"
      ],
      "rangeStrategy": "pin",
      "groupName": "Volar"
    },
    {
      "matchPackageNames": [
        "nuxt",
        "@nuxt/kit"
      ],
      "rangeStrategy": "bump",
      "groupName": "Nuxt",
      "separateMultipleMinor": true,
      "separateMinorPatch": true
    },
    {
      "matchPackageNames": [
        "@yandex/**"
      ],
      groupName: "Yandex",
    }
  ],
  "labels": [
    "2.x",
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageAction": "chore(deps): Lockfile Maintenance",
    "schedule": [
      "before 4am on friday"
    ]
  },
  "separateMultipleMajor": true,
  "updateInternalDeps": true,
  "baseBranches": [
    "master"
  ],
  extends: [
    ":automergeDisabled",
    ":dependencyDashboard",
    "group:monorepos",
    "group:recommended",
    "replacements:all"
  ],
  rangeStrategy: "bump",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "vulnerabilityAlerts": {
    //TODO: enable in v3
    enabled: false,
    "commitMessageSuffix": "chore(deps-security)",
  },
  "constraints": {
    "node": "^20 || ^22"
  }
}
