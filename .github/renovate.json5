{
  assignees: [
    'daniluk4000',
  ],
  prConcurrentLimit: 0,
  semanticCommits: 'disabled',
  dependencyDashboardOSVVulnerabilitySummary: 'all',
  osvVulnerabilityAlerts: true,
  rebaseWhen: 'behind-base-branch',
  packageRules: [
    {
      matchDepTypes: [
        'peerDependencies',
        'engines',
      ],
      enabled: false,
    },
    {
      matchDepTypes: [
        'peerDependencies',
        'engines',
      ],
      enabled: true,
      matchPackageNames: [
        '/@yandex/*/',
      ],
    },
    {
      groupName: 'all non-major dependencies',
      groupSlug: 'all-minor-patch',
      matchUpdateTypes: [
        'minor',
      ],
      matchCurrentVersion: '!/^0/',
      matchPackageNames: [
        '*',
      ],
    },
    {
      groupName: 'all non-major dependencies',
      groupSlug: 'all-minor-patch',
      matchUpdateTypes: [
        'patch',
      ],
      matchPackageNames: [
        '*',
      ],
    },
    {
      matchPackageNames: [
        'vue',
      ],
      rangeStrategy: 'bump',
      groupName: 'Vue',
      separateMultipleMinor: true,
      separateMinorPatch: true,
    },
    {
      matchPackageNames: [
        '@vue/language-server',
        'vue-tsc',
      ],
      rangeStrategy: 'pin',
      groupName: 'Volar',
    },
    {
      matchPackageNames: [
        'nuxt',
        '@nuxt/kit',
      ],
      rangeStrategy: 'bump',
      groupName: 'Nuxt',
      separateMultipleMinor: true,
      separateMinorPatch: true,
    },
    {
      matchPackageNames: [
        '@yandex/**',
      ],
      groupName: 'Yandex',
    },
  ],
  labels: [
    '3.x',
    'dependencies',
  ],
  lockFileMaintenance: {
    enabled: true,
    commitMessageAction: 'chore(deps): Lockfile Maintenance',
    schedule: [
      'before 4am on friday',
    ],
  },
  separateMultipleMajor: true,
  updateInternalDeps: true,
  baseBranchPatterns: [
    'master',
  ],
  extends: [
    ':automergeDisabled',
    ':dependencyDashboard',
    'group:monorepos',
    'group:recommended',
    'replacements:all',
  ],
  rangeStrategy: 'bump',
  npm: {
    commitMessageTopic: '{{prettyDepType}} {{depName}}',
  },
  vulnerabilityAlerts: {
    enabled: true,
    commitMessageSuffix: 'chore(deps-security)',
  },
  constraints: {
    node: '^22 || ^24',
  },
}
